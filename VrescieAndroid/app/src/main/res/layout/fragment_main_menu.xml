<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MainMenuFragment">


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/imageViewImplicitChat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageViewAnonymousChat"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="25dp"
        android:src="@drawable/chat_bubble_question"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewAnonymousChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/anonymous_chat_pl"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/imageViewAnonymousChat"
        app:layout_constraintStart_toStartOf="@+id/imageViewAnonymousChat"
        app:layout_constraintEnd_toEndOf="@+id/imageViewAnonymousChat" />

    <ImageView
        android:id="@+id/imageViewImplicitChat"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="25dp"
        android:src="@drawable/chat_bubble_check"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageViewUser"
        app:layout_constraintStart_toEndOf="@+id/imageViewAnonymousChat" />

    <TextView
        android:id="@+id/textViewImplicitChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/implicity_chat_pl"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/imageViewImplicitChat"
        app:layout_constraintStart_toStartOf="@+id/imageViewImplicitChat"
        app:layout_constraintEnd_toEndOf="@+id/imageViewImplicitChat" />

    <ImageView
        android:id="@+id/imageViewUser"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="25dp"
        android:src="@drawable/user"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_pl"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/imageViewUser"
        app:layout_constraintStart_toStartOf="@+id/imageViewUser"
        app:layout_constraintEnd_toEndOf="@+id/imageViewUser" />



</androidx.constraintlayout.widget.ConstraintLayout>